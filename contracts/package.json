{
  "name": "defi-karma-contracts",
  "version": "1.0.0",
  "description": "DeFi Karma smart contracts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:holesky": "hardhat run scripts/deploy.ts --network holesky",
    "test:deployed": "hardhat run scripts/test-deployed.ts --network sepolia",
    "test:interactions": "hardhat run scripts/test-interactions.ts --network sepolia",
    "test:all": "npm run test:deployed && npm run test:interactions"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "hardhat": "^2.20.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.4.0"
  }
}

